# RAG Desktop Application Environment Configuration
# Copy to .env and update with your actual values

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# PostgreSQL Database URL (full connection string)
DATABASE_URL=postgresql://raguser:secure_password@localhost:5432/ragdb

# Individual PostgreSQL Settings
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ragdb
POSTGRES_USER=raguser
POSTGRES_PASSWORD=secure_password

# ==============================================
# VECTOR DATABASE (QDRANT)
# ==============================================
# Qdrant server URL
QDRANT_URL=http://localhost:6333

# Qdrant API key (optional, leave empty for local development)
QDRANT_API_KEY=

# Default collection name for user documents
QDRANT_COLLECTION_PREFIX=rag_docs

# ==============================================
# GOOGLE OAUTH CONFIGURATION
# ==============================================
# Google OAuth 2.0 credentials (from Google Cloud Console)
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# OAuth redirect URI (must match Google Cloud Console configuration)
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# ==============================================
# JWT TOKEN CONFIGURATION
# ==============================================
# Secret key for JWT token signing (generate a secure random string)
JWT_SECRET_KEY=your_super_secure_jwt_secret_key_here_min_32_chars

# JWT algorithm for token signing
JWT_ALGORITHM=HS256

# JWT token expiration time in minutes
JWT_EXPIRE_MINUTES=60

# Refresh token expiration in days
REFRESH_TOKEN_EXPIRE_DAYS=30

# ==============================================
# AI MODEL CONFIGURATION
# ==============================================
# SentenceTransformers model for embeddings
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Embedding dimension (384 for all-MiniLM-L6-v2)
EMBEDDING_DIMENSION=384

# Ollama server configuration
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=gemma:1.1b-instruct-q8_0

# Model download settings
AUTO_DOWNLOAD_MODELS=true
MODEL_CACHE_DIR=./models

# ==============================================
# TAVILY WEB SEARCH
# ==============================================
# TAVILY API key for web search fallback
TAVILY_API_KEY=your_tavily_api_key_here

# Maximum web search results to fetch
TAVILY_MAX_RESULTS=5

# Web search timeout in seconds
TAVILY_TIMEOUT=10

# ==============================================
# APPLICATION SETTINGS
# ==============================================
# Application metadata
APP_NAME=RAG Desktop Application
APP_VERSION=1.0.0

# Debug mode (set to false in production)
DEBUG=true

# API server configuration
API_HOST=0.0.0.0
API_PORT=8000

# Enable API documentation (set to false in production)
ENABLE_DOCS=true

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ==============================================
# DOCUMENT PROCESSING SETTINGS
# ==============================================
# Maximum file size for uploads (in MB)
MAX_FILE_SIZE_MB=50

# Supported file extensions (comma-separated)
SUPPORTED_EXTENSIONS=pdf,docx,txt,md

# Document chunking configuration
DEFAULT_CHUNK_SIZE=1000
DEFAULT_CHUNK_OVERLAP=100
MIN_CHUNK_SIZE=200
MAX_CHUNK_SIZE=2000

# ==============================================
# CHAT AND RAG SETTINGS
# ==============================================
# Maximum number of retrieved documents for RAG
MAX_RAG_DOCUMENTS=5

# Similarity threshold for document retrieval
SIMILARITY_THRESHOLD=0.7

# Maximum context length for LLM
MAX_CONTEXT_LENGTH=2000

# Enable web search fallback when local results are insufficient
ENABLE_WEB_FALLBACK=true

# Chat session settings
MAX_CHAT_HISTORY=50
CHAT_SESSION_TIMEOUT_HOURS=24

# ==============================================
# SECURITY SETTINGS
# ==============================================
# Rate limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# Session cookie settings
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=lax

# ==============================================
# LOGGING CONFIGURATION
# ==============================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file paths
LOG_FILE=logs/app.log
ERROR_LOG_FILE=logs/error.log

# Enable structured logging
STRUCTURED_LOGGING=true

# Log rotation settings
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5

# ==============================================
# PERFORMANCE SETTINGS
# ==============================================
# Number of worker processes for API server
WORKERS=1

# Enable GPU acceleration for embeddings (if available)
USE_GPU=false

# Batch size for embedding generation
EMBEDDING_BATCH_SIZE=32

# Vector search configuration
VECTOR_SEARCH_LIMIT=100
VECTOR_SEARCH_TIMEOUT=5

# ==============================================
# DEVELOPMENT SETTINGS
# ==============================================
# Enable auto-reload for development
AUTO_RELOAD=true

# Enable profiling
ENABLE_PROFILING=false

# Test database URL (for running tests)
TEST_DATABASE_URL=postgresql://raguser:secure_password@localhost:5432/ragdb_test

# Mock external services in development
MOCK_EXTERNAL_SERVICES=false

# ==============================================
# FRONTEND DESKTOP APP SETTINGS
# ==============================================
# Desktop application window settings
WINDOW_WIDTH=1200
WINDOW_HEIGHT=800
WINDOW_MIN_WIDTH=800
WINDOW_MIN_HEIGHT=600

# System tray settings
ENABLE_SYSTEM_TRAY=true
START_MINIMIZED=false

# Theme settings
DEFAULT_THEME=dark
ENABLE_THEME_SWITCHING=true

# Auto-start with system
AUTO_START_WITH_SYSTEM=false

# Check for updates
AUTO_CHECK_UPDATES=true
UPDATE_CHECK_INTERVAL_HOURS=24